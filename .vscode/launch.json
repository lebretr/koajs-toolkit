    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox loggerLib",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/loggerLib/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox loggerLib cjs",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/loggerLib/index.cjs"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox httpServerLib cjs",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/httpServerLib/index.cjs"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": { "NODE_OPTIONS":"--experimental-vm-modules" },
            "program": "${workspaceFolder}/node_modules/.bin/jest"
        }
    ]
}