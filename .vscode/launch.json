    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox staticLib",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/staticLib/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox staticLib cjs",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/staticLib/index.cjs"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox loggerLib",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/loggerLib/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox loggerLib cjs",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/loggerLib/index.cjs"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox httpServerLib cjs",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/httpServerLib/index.cjs"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sandbox httpServerLib js",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env":{
                "DEBUG":"koajs-toolkit:*"
            },
            "program": "${workspaceFolder}/sandbox/lib/httpServerLib/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": ["--runInBand"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch 1 Test",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": ["--runInBand","index.test.js"]
        }
    ]
}